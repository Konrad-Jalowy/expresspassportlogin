<% } %>

<form action="/users/login" method="POST">
    <label for="email">Email</label>
    <input
      type="email"
      id="email"
      name="email"
      placeholder="Enter Email"
    />
    <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            placeholder="Enter Password"
          />
    <input type="submit" value="Login">
</form>